% NEW DEFINITION HARMONIZING CAPTION and HYPERREF            
% Figure insertion with specified width relative to current paper or box width
% #1: Title   #2: Label   #3: width 0 ... 1  #4: figname   #5: caption spacing
\newcommand{\fig}[5]
           {\begin{minipage}[c]{\hsize}
            \captionsetup{type=figure}
               \begin{minipage}[c]{1\hsize}
                 \begin{center}
                    \includegraphics[width=#3\hsize]{#4}
                 \end{center}
               \end{minipage}
               \hardvspace{#5}%
               \captionof{figure}{\label{#2}#1}%
            \end{minipage}}

% Like \fig but spanning 2 columns in a multicol environment 
\newcommand{\figtwocol}[5]
           {\end{multicols}
            \begin{minipage}[c]{\textwidth}
               \captionsetup{type=figure}
               \begin{minipage}[c]{\linewidth}
                 \begin{center}
                    \includegraphics[width=#3\hsize]{#4}
                 \end{center}
               \end{minipage}                                        
               \hardvspace{#5}
               \begin{center}
               \begin{minipage}[c]{0.95\linewidth}                   
                  \renewcommand{\baselinestretch}{0.95}
                  \small\sffamily%
                  \begin{center}
                     \captionof{figure}{\label{#2}#1}%
                  \end{center}
               \end{minipage}                                        
               \end{center}
            \end{minipage}
            \begin{multicols}{2}}


% Figure w/o caption and label
% #1: width 0 ... 1       #2: figname 
\newcommand{\fignotext}[2]
           {\begin{minipage}[c]{\columnwidth}
               \begin{center}
                   {\includegraphics[width=#1\hsize]{#2}}
               \end{center}
            \end{minipage}\\}

% Figure w/o caption and label rotated by 90 degrees
% #1: width 0 ... 1       #2: figname 
\newcommand{\fignotextrotate}[2]
           {\begin{minipage}[c]{\columnwidth}
               \begin{center}
                   {\includegraphics[height=#1\hsize, angle=90]{#2}}
               \end{center}
            \end{minipage}\\}


