% Table insertion with specified width relative to current paper or box width
% #1: Caption               #2: Label   
% #3: Space title-table     #4: vertical line stretch  
% #5: Content
\newcommand{\tab}[5]
           {\begin{minipage}[c]{\hsize}
               \captionsetup{type=table}
               \captionof{table}{#1}
               \rowcolors[]{1}{oddlinecol}{evenlinecol}
               \arrayrulecolor{headercellcol}
               \renewcommand{\arraystretch}{#4}
               \vspace{#3ex}\begin{center}
                 \sffamily\small
                 #5
               \end{center}
               \label{#2}
            \end{minipage}}
            
